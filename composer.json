{
    "name"        : "wecodemore/astrofields-core",
    "description" : "A PHP Pattern Library for Fields, Forms and other User provided Input",
    "type"        : "library",
    "keywords"    : [ "wordpress", "forms", "fields", "astrofields" ],
    "homepage"    : "https://github.com/AstroFields/Core",
    "license"     : "MIT",
    "authors"     : [
        {
            "name"     : "Kaiser Franz Josef",
            "email"    : "wecodemore@gmail.com",
            "homepage" : "http://unserkaiser.com",
            "role"     : "Lead Developer"
        }
    ],
    "support"     : {
        "issues" : "https://github.com/AstroFields/Core/issues",
        "forum"  : "http://stackoverflow.com/questions/tagged/astrofields",
        "source" : "https://github.com/AstroFields/Core/releases",
        "wiki"   : "http://astrofields.com/docs",
        "email"  : "hi.astronauts@gmail.com"
    },
    "minimum-stability" : "dev",
    "require"     : {
        "php"                 : ">=5.3.2",
        "composer/installers" : "~1.0"
    },
    "require-dev" : {
        "phpunit/phpunit"               : "4.3.*",
        "brain/hooks-mock"              : "*",
        "codeclimate/php-test-reporter" : "dev-master"
    },
    "repositories": [
        {
            "type" : "vcs",
            "url"  : "https://github.com/franz-josef-kaiser/HooksMock.git"
        }
    ],
    "autoload"    : {
        "psr-4" : {
            "WCM\\AstroFields\\Core\\" : "src/",
            "Astro\\"                  : "src/Facades/"
        }
    },
    "config": {
        "bin-dir"             : "bin",
        "optimize-autoloader" : true
    }
}
